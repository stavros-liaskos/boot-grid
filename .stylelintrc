{
  "extends": "stylelint-config-standard",
  "rules": {
    "color-hex-length": "long",
    "at-rule-no-unknown": [
      true,
      {
        "ignoreAtRules": [
          "extend",
          "function",
          "if",
          "else",
          "each",
          "mixin",
          "include",
          "else if",
          "for",
          "return",
          "at-root"
        ]
      }
    ],
    "at-rule-empty-line-before": [
      "always",
      {
        "except": [
          "blockless-after-same-name-blockless",
          "first-nested",
          "inside-block"
        ],
        "ignore": [
          "after-comment"
        ]
      }
    ],
    "block-closing-brace-newline-after": [
      "always",
      {
        "ignoreAtRules": [
          "else if"
        ]
      }
    ]
  }
}
